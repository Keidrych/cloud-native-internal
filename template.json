{
	// Defaults || Project Data
	"name": "cloud-native-internal", // additionally used as directory name when scaffolding out of this repo
	"description": "minimal framework for Cloud Native Applications to build on",
	"organization": "sotekton",
	"container-repository": "hub.docker.io",
	"author": "MySelf",

	// Pollinate Instructions
	"parse": ["pollen-*"],
	"merge": [
		// Package.json externally managed via MRM as per Company Design Guidelines
		["package.json", "pollen-package.json"]
	],
	"move": [
		{"pollen-fathomable.yaml": "fathomable.yaml"},
		{"pollen-Dockerfile": "Dockerfile"}
	],
	"discard": [
		".documentary",
		".nyc_output",
		"README.md",
		"container",
		"node_modules",
		"pollen-package.json"
	],
	"complete": "git init {{ name }}; cd {{ name }}; git submodule add -b master https://github.com/sotekton/agnostic-mrm.git mrm; git submodule add -b master https://github.com/sotekton/agnostic-container-build.git container; git submodule add -b master https://github.com/sotekton/agnostic-plop.git container; git submodule init; git submodule update"
}
